/* Import Bootstrap gem: https://github.com/twbs/bootstrap-rubygem */
// Custom bootstrap variables must be set or imported before bootstrap itself.
$enable-flex:   true !important;
@import "bootstrap";


/* Import the flag_icon_rails gem */
@import "flag_icon_css";

// use usa flag for locale :en
.flag-icon-en {
    @extend .flag-icon-us; // !optional;
}


/* Parallax */
//= depend_on_asset "tax-refund.jpg"

.bg {
  background: url('<%= asset_path('tax-refund.jpg') %>') no-repeat center center;
  opacity: 0.5;
  //background-size: 100%;
  background-size: cover;
  position: fixed;
  width: 100%;
  height: 400px; /*same height as jumbotron */
  top:0;
  left:0;
  z-index: -1;
}

.jumbotron {
  padding-top: 200px;
  height: 400px;
  color: black;
  text-shadow: 2px 3px 1px whitesmoke;
  background:transparent;
  .lead {
    font-weight: bold;
  }
}
